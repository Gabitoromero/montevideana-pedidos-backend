{
  "name": "montevideana-pedidos-backend",
  "version": "1.0.0",
  "description": "Backend for La Montevideana Pedidos - Order state management system",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p ./tsconfig.json",
    "start": "node dist/server.js",
    "start:dev": "tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./dist/server.js\"",
    "start:pm2": "pm2 start ecosystem.config.cjs",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "bd": "mysql -u root -p montevideana_pedidos < scripts/init-sistema.sql",
    "seed": "tsx src/shared/db/seed.ts"
  },
  "keywords": [
    "montevideana",
    "pedidos",
    "backend",
    "express",
    "typescript"
  ],
  "author": "RomeroSoft",
  "license": "ISC",
  "packageManager": "pnpm@10.26.0",
  "dependencies": {
    "@mikro-orm/reflection": "^6.3.13",
    "@types/node-cron": "^3.0.11",
    "axios": "^1.13.2",
    "axios-cookiejar-support": "^6.0.5",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "dotenv-vault": "^1.27.0",
    "express": "5.2.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-cron": "^4.2.1",
    "reflect-metadata": "^0.2.2",
    "tough-cookie": "^6.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.3.13",
    "@mikro-orm/core": "^6.6.2",
    "@mikro-orm/mysql": "^6.6.2",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^24.10.1",
    "@types/supertest": "^6.0.2",
    "pm2": "^5.4.3",
    "supertest": "^7.0.0",
    "tsc-watch": "^7.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3",
    "vitest": "^3.0.3"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./src/shared/db/mikro-orm.config.ts"
    ]
  }
}
